<h2>Add Collaborator</h2>
<%= form_for @collaboration, html: { class: "form-horizontal"} do |f| %>
  
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :role, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :role, options_for_select([["Owner", "Owner"], ["Editor", "Editor"]]), class: "form-control" %>
    </div>
  </div>

  <%= f.hidden_field :wiki_id, value: @wiki.id %>
  
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>User ID</th>
    </tr>
  </thead>
  <tbody>
    <% @collaborations.each do |colab| %>
    <tr>
      <td><%= colab.email %></td>
      <td><%= colab.role %> </td>
      <td><%= colab.user_id %></td>
      <td><%= link_to "remove", colab, method: :delete, class: "btn btn-primary btn-xs" %></td>
    </tr>
    <% end %>
  </tbody>
  </table>









  

