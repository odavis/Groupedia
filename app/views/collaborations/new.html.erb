<h2> Add Collaborators </h2>

<%= form_for @collaboration, :url => collaborations_path do |f| %>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :role %>
    <%= f.select :role, options_for_select([["Owner", "Owner"], ["Editor", "Editor"]]) %>
  </div>

  <div>
    <%= f.submit "Submit" %>
  </div>
 

<% end %>

<br/>

<h2>Collaborators</h2>

  <% @collaborations.each do |collaboration| %>
    <p>
      <%= collaboration.email %> 
      <%= collaboration.role %>
      <%= collaboration.wiki_id %>
      <%= collaboration.user_id %>
      <%= link_to "edit", "#", class: "btn btn-primary btn-xs" %>
      <%= link_to "remove", collaboration, method: :delete, class: "btn btn-primary btn-xs"%>
    </p>
  <% end %>
  

