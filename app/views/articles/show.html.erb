<h1><%= @article.title %></h1>
<p><%=  @article.body %></p>

<% if can? :edit, Article %>
  <%= link_to "Edit", edit_wiki_article_path, class: "btn btn-success" %>
<% end %>

<% if can? :destroy, Article %>
  <%= link_to "Delete", [@wiki, @article], method: :delete, class: "btn btn-warning", confirm: "Are you sure?" %>
<% end %>